#!/data/data/com.termux/files/usr/bin/bash
rm -f setup.log

apt-get update &> /dev/null && apt-get upgrade &> /dev/null
apt-get install termux-api &> /dev/null

grep -q "termux-fingerprint" ~/../usr/bin/login ; [ $? -eq 0 ] && sed -i '/termux-fingerprint/d' ~/../usr/bin/login || sed -i '2 a termux-fingerprint | grep -q "AUTH_RESULT_SUCCESS"; [ $? -ne 0 ] && exit' ~/../usr/bin/login
